# Editor configuration, see https://editorconfig.org
root = true

[*]
charset = utf-8
indent_style = space
insert_final_newline = true
trim_trailing_whitespace = true
end_of_line = lf

# TypeScript файлы (основные)
[*.ts]
indent_size = 2
quote_type = single
max_line_length = 140
indent_style = space

# JavaScript файлы
[*.js]
indent_size = 2
quote_type = single
max_line_length = 140

# HTML файлы
[*.html]
indent_size = 2
max_line_length = 140
indent_style = space

# Angular templates
[*.component.html]
indent_size = 2
max_line_length = 140

# Стили (CSS/SCSS/LESS)
[*.{css,scss,less}]
indent_size = 2
max_line_length = 140

# TypeScript тесты
[*.spec.ts]
indent_size = 2
max_line_length = 140

# E2E тесты
[*.e2e-spec.ts]
indent_size = 2
max_line_length = 140

# JSON файлы
[*.json]
indent_size = 2

# Markdown документация
[*.md]
max_line_length = off
trim_trailing_whitespace = false

# YAML файлы (GitHub Actions, etc)
[*.{yml,yaml}]
indent_size = 2
indent_style = space

# Конфигурационные файлы
[*.config.js]
indent_size = 2
quote_type = single

# Nginx конфиги
[*.nginx.conf]
indent_size = 2

# SQL файлы
[*.sql]
indent_size = 2
keyword_case = upper